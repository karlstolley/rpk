{
  "root": true,
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "jquery": true
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-console": 0,
    "indent": ["error", 2],
    "curly": 2,
    "consistent-return": 1,
    "eqeqeq": 2,
    "use-isnan": 1,
    "valid-typeof": 1,
    "no-loop-func": 2,
    "no-redeclare": 1,
    "quotes": ["warn","double"],
    "vars-on-top": 1,
    "no-undef": 1,
    "no-unused-vars": 1,
    "camelcase": 1,
    "comma-spacing": ["error", { "before": false, "after": true }],
    "semi-spacing": ["error", {"before": false, "after": true}]
  }
}
